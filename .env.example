# ============================================
# API Gateway Environment Variables
# ============================================
# Copy this file to .env and update with your actual values
# IMPORTANT: Never commit .env file to version control!

# ============================================
# Service URLs
# ============================================
AUTH_SERVICE_URL=http://localhost:8081
PRICE_PREDICTION_SERVICE_URL=http://localhost:8082
PORTFOLIO_BACKTEST_SERVICE_URL=http://localhost:8083

# ============================================
# Gateway Security (CHANGE IN PRODUCTION!)
# ============================================
# Generate a secure random string for production:
# openssl rand -base64 32
GATEWAY_SECRET=change-this-to-a-secure-random-value-in-production

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=8080

# ============================================
# Logging
# ============================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_GATEWAY=DEBUG

# ============================================
# CORS Configuration (comma-separated)
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# ============================================
# MongoDB Configuration (for Auth Service)
# ============================================
MONGO_USERNAME=admin
MONGO_PASSWORD=password123
MONGO_DATABASE=trading_auth

# ============================================
# JWT Configuration (for Auth Service)
# ============================================
# Generate a secure random string for production:
# openssl rand -base64 64
JWT_SECRET=your-secret-key-change-in-production-base64-encoded
JWT_ACCESS_TOKEN_EXPIRATION=3600000
JWT_REFRESH_TOKEN_EXPIRATION=86400000

# ============================================
# Circuit Breaker Configuration
# ============================================
CIRCUIT_BREAKER_FAILURE_RATE_THRESHOLD=50
CIRCUIT_BREAKER_WAIT_DURATION_IN_OPEN_STATE=10000
CIRCUIT_BREAKER_SLIDING_WINDOW_SIZE=10

# ============================================
# Request Timeout (milliseconds)
# ============================================
REQUEST_TIMEOUT=5000

